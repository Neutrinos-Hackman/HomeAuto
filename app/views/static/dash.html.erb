<h1 class="header">Dashboard</h1>

<div class="row">

<div class="col-md-4">
<div class="card">
    <div class="card-height-indicator"></div>
    <div class="card-content">
        <div class="card-image">
            <%= image_tag @value.weather_temp.to_i > 26 ? "sunny.jpg" : "cloudy.jpg" %>
            <h3 class="card-image-headline"><%= @value.weather_temp %>Â°c&nbsp&nbsp&nbsp<%= @value.weather_temp.to_i > 26 ? "Sunny" : "Cloudy" %></h3>
